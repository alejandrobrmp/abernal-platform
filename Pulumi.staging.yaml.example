# Example configuration for staging stack
# Create this file when you run: pulumi stack init staging

config:
  # Kubernetes configuration
  kubernetes:kubeconfig: ~/.kube/config-staging
  kubernetes:context: staging
  
  # Platform configuration
  abernal-platform:namespace: abernal-platform-staging
  
  # ArgoCD configuration
  abernal-platform:argocd.enabled: true
  abernal-platform:argocd.namespace: argocd-staging
  abernal-platform:argocd.version: v2.12.3
  
  # Verdaccio configuration
  abernal-platform:verdaccio.enabled: true
  abernal-platform:verdaccio.namespace: abernal-platform-staging
  abernal-platform:verdaccio.version: 5.31.1
  abernal-platform:verdaccio.storage.size: 20Gi
  abernal-platform:verdaccio.storage.storageClass: standard
